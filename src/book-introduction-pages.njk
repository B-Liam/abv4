let next = Number(newPageIndexNumber) + 1;

//this stores the next and prevous pages in variables
let nextPage = "";
let previousPage = "";

function findNext() {
    if ( next < contentFinalIndexValue ) {
    nextPage = `{{ contentindex[contentindex | findIndexValue( pagedata.slug ) + 1].slug }}`;
    document.getElementById("lower-next").innerHTML = makeNextButton(nextPage);
    document.getElementById("higher-next").innerHTML = makeNextButton(nextPage);
    }
}
findNext();

console.log(nextPage);

function findPrevious() {
    if ( previous >= 0 ) {
    previousPage = `{{ contentindex[contentindex | findIndexValue( pagedata.slug ) - 1].slug }}`;
    document.getElementById("lower-previous").innerHTML = makePreviousButton(previousPage);
    document.getElementById("higher-previous").innerHTML = makePreviousButton(previousPage);
    }
}
findPrevious();

//this generates the link to the next page
function makeNextButton(slug) {
 return (
     `<a href="/contents/${slug}"><button style="background:#009900;width:140px; border:none;color:#ffffff;font-size:1rem; padding-top: 0.5rem; padding-bottom: 0.5rem;margin-top:10px">Next Page</button></a>`
 )
};

//this generates the link to the next page
function makePreviousButton(slug) {
 return (
     `<a href="/contents/${slug}"><button style="background:#009900;width:140px; border:none;color:#ffffff;margin-t;font-size:1rem; padding-top: 0.5rem; padding-bottom: 0.5rem;margin-top:10px">Previous</button></a>`
 )
};

// This checks if there is introdcution text, and populates it if there is
let introText = `{{ pagedata.content.introduction }}`;
document.getElementById("introduction").innerHTML = marked.parse(introText);

//a function to adjust for empty video content (vimeo and youtube), which is then called below the function
let videoCheck = `{{ pagedata.content.vimeo_number }}`;
let youtubeCheck = `{{ pagedata.content.youtube_number }}`;


function removeDiv( divname, keyname ) {
    if ( keyname == "" ) {
        document.getElementById(divname).style = "display:none"
    } else {
        document.getElementById(divname).innerHTML = marked.parse( keyname )
    }
}

function loadVimeoVideo() {
    return (
        `<iframe style="" id="video-file" src="https://player.vimeo.com/video/{{pagedata.content.vimeo_number}}" frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>`
    )
}

function loadYouTubeVideo() {
    return (
        `<iframe style="" id="video-file" src="https://www.youtube.com/embed/{{pagedata.content.youtube_number}}" frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>`
    )
}

//A function that checks if there is a vimeo video, and if not, removes the section
function checkIfVideo() {
    if ( videoCheck == "" ) {
        document.getElementById("video-container").style = "display:none";
    }
    else {
        document.getElementById("embed-container").innerHTML =loadVimeoVideo();
    }
}
checkIfVideo();

//A function that checks if there is a youtube video, and if not, removes the section
function checkYouTubeVideo() {
    if ( youtubeCheck == "" ) {
        document.getElementById("youtube-container").style = "display:none";
    }
    else {
        document.getElementById("youtube-embed-container").innerHTML =loadYouTubeVideo();
    }
}
