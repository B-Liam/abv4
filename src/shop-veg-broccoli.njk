---
layout: /layouts/pagetemplate.njk
pagination:
    data: varvegcats.broccoli.cats
    size: 1
    alias: vegtypes
permalink: "shop/broccoli/{{ vegtypes.vegtype | slug }}/index.html"
eleventyComputed:
    title: "{{ vegtypes.vegtype | title }} Broccoli | Seeds And Plants | Allotment Book"
    description: "Browse the range of {{ vegtypes.vegtype }} broccoli varieties, and discover the range of seeds and plants available."
---
        {% set vegetable = varvegcats.broccoli.name %}
        {% set test = varvegcats.broccoli.cats %}

        <div id="sidebar">
            <div style="background:#ffffff;margin-left:1rem;margin-top:2rem; width:200px;padding:0rem 2rem 2rem 2rem;border-radius:1rem;border-style:solid;border-width:2;border-color:#009900" id="promo-box">
            <h4 style="margin-bottom:10px;">Growing {{ vegetable | title }}</h4>
            <div id="promo-bullets">
                <div><i style="font-size:0.7em;color:#009900" class="fas fa-chevron-circle-right"></i> Varieties</div>
                <div><i style="font-size:0.7em;color:#009900" class="fas fa-chevron-circle-right"></i> Planting</div>
                <div><i style="font-size:0.7em;color:#009900" class="fas fa-chevron-circle-right"></i> Growing Tips</div>
                <div><i style="font-size:0.7em;color:#009900" class="fas fa-chevron-circle-right"></i> Harvesting</div>
                <div><i style="font-size:0.7em;color:#009900" class="fas fa-chevron-circle-right"></i> Gallery</div>
                
                <div>
                <a href="/growing-guides/"><button style="background:#009900;color:#ffffff; border:none;padding:5px 10px 5px 10px;margin-top:20px;"><i class="fas fa-chevron-circle-right"></i> FIND OUT MORE</button></a>
                </div>
            </div>
        </div>

        </div>
    
        <div id="main-column">
        
                <main id="main-content">
                    
                    <div id="content-heading">
                        <div id="breadcrumb-container">
                            <div id="breadcrumb">
                                <a href="/shop">Shop</a> <i class="fas fa-chevron-right"></i> 
                                <a href="/shop/vegetables">Vegetables</a> <i class="fas fa-chevron-right"></i>
                                <a href="/shop/{{ vegetable | slug }}/all">{{ vegetable | title }}</a> <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </div>

                    <div id="content-body">
                        <h1 style="margin-bottom:10px">{{ vegetable | title }} Varieties: {{ vegtypes.vegtype | title }}</h1>
                        <div style="margin-top:0px;margin-bottom:20px" id="filters">
                            <div id="filter-title">
                            View:
                            </div>
                            <div id="filter-links">
                            {% for veg in test %}
                                <a href="/shop/broccoli/{{ veg.vegtype | slug }}"><button style="background:#e0f7d3;color:#009900; border:none">{{ veg.vegtype | upper }}</button></a>
                            {% endfor %}
                            
                            </div>
                        </div>

                        {% for veg in vegdata %} {% if ( veg.vegetable == vegetable ) and (vegtypes.vegtype in veg.cats) %}

                        <div id="prod-container" style="border-style:solid;border-width:1;border-color:#e5e5e5;display:flex;margin-bottom:20px">

                            <div style="padding:0.5em;width:40%" id="image-container">
                            <img style="width:100%" src="{{ veg.image }}" alt="{{ veg.name }}" />
                            </div>    

                            <div style="width:60%; padding-left:1em;padding-right:0.5em" id="text-container">
                            <h3 style="margin-top:0.5em;margin-bottom:10px">{{ veg.name }}</h3>
                            <div style="margin-bottom:20px">{{ veg.description }} </div>
                            <div style="margin-top:3px"><strong>Type:</strong> {{veg.type | title }}</div>
                            <div style="margin-top:3px"><strong>Sow:</strong> {{veg.sow}}</div>
                            <div style="margin-top:3px"><strong>Harvest:</strong> {{veg.harvest}}</div>
                            <a rel="sponsored" href="{{veg.deeplink}}"><button style="background:#009900;color:#ffffff; border:none;padding:5px 10px 5px 10px;margin-top:20px;margin-bottom:20px;font-size:1rem"><i class="fas fa-chevron-circle-right"></i> Â£{{veg.price}} on {{ veg.merchant }}</button></a>
                            
                        
                            </div>
                            

                        </div>
            

                        {% endif %}{% endfor %}



                    </div>

                </main>
            </div>