---
layout: /layouts/pagetemplate.njk
date: Last Modified
pagination:
    data: varvegcats.chard.cats
    size: 1
    alias: vegtypes
    addAllPagesToCollections: true
permalink: "shop/chard/{{ vegtypes.vegtype | slug }}/index.html"
eleventyComputed:
    title: "Chard Varieties: {{ vegtypes.vegtype | title }} | Seeds And Plants | Allotment Book"
    description: "See {{ vegtypes.vegtype }} chard varieties, and discover the range of chard seeds and plants available."
---
        {% set vegetableplural = varvegcats.chard.nameplural %}
        {% set vegetablesingular = varvegcats.chard.namesingular %}
        {% set filtercat = varvegcats.chard.cats %}

        <div id="sidebar">

        </div>
    
        <div id="main-column">
        
                <main id="main-content">
                    
                    <div id="content-heading">
                        <div id="breadcrumb-container">
                            <div id="breadcrumb">
                                <a href="/shop">Shop</a> <i class="fas fa-chevron-right"></i> 
                                <a href="/shop/vegetables">Vegetables</a> <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </div>

                    <div id="content-body">
                        <h1 style="margin-bottom:10px">{{ vegetablesingular | title }} Varieties: {{ vegtypes.vegtype | title }}</h1>
                        <div style="margin-top:0px;margin-bottom:20px" id="filters">
                            <div id="filter-title">
                            View:
                            </div>
                            <div id="filter-links">
                            {% for veg in filtercat %}
                                <a href="/shop/{{ vegetableplural | slug }}/{{ veg.vegtype | slug }}"><button style="background:#e0f7d3;color:#009900; border:none">{{ veg.vegtype | upper }}</button></a>
                            {% endfor %}
                            
                            </div>
                        </div>

                        {% for veg in vegdata %} {% if ( veg.vegetable == vegetablesingular ) and (vegtypes.vegtype in veg.cats) %}

                        <div id="prod-container" style="border-style:solid;border-width:1;border-color:#e5e5e5;display:flex;margin-bottom:20px">

                            <div style="padding:0.5em;width:40%" id="image-container">
                            <img style="width:100%" src="{{ veg.image }}" alt="{{ veg.name }}" />
                            </div>    

                            <div style="width:60%; padding-left:1em;padding-right:0.5em" id="text-container">
                            <h3 style="margin-top:0.5em;margin-bottom:10px">{{ veg.name }}</h3>
                            <div style="margin-bottom:20px">{{ veg.description }} </div>
                            <div style="margin-top:3px"><strong>Type:</strong> {{veg.type | title }}</div>
                            <div style="margin-top:3px"><strong>Sow:</strong> {{veg.sow}}</div>
                            <div style="margin-top:3px"><strong>Harvest:</strong> {{veg.harvest}}</div>
                            <a rel="sponsored" href="{{veg.deeplink}}"><button style="background:#009900;color:#ffffff; border:none;padding:5px 10px 5px 10px;margin-top:20px;margin-bottom:20px;font-size:1rem"><i class="fas fa-chevron-circle-right"></i> Â£{{veg.price}} on {{ veg.merchant }}</button></a>
                            
                        
                            </div>
                            

                        </div>
            

                        {% endif %}{% endfor %}



                    </div>

                </main>
            </div>