<script>

//this gets the relevant month and stores it in a variable
let month = `{{pagedata.month}}`;

//new variables to hold the clean data
//I have created a custom filter in .eleventy.js called getPlants, this contains a function that filters the data 
let indoorMonthData = JSON.parse(`{{ factsplantindoor | getPlants(pagedata.month) | dump | safe }}`);
let outdoorMonthData = JSON.parse(`{{ factsplantoutdoor | getPlants(pagedata.month) | dump | safe }}`);

//function to sort the indoor and outdoor variables in alphabetical order
indoorMonthData.sort ((a, b) => (a.plant > b.plant) ? 1 : -1);
outdoorMonthData.sort ((a, b) => (a.plant > b.plant) ? 1 : -1);

//check for empty data, and show 'none suggested' on the page if empty
function checkEmpty(data, cat, divname) {
    //this creates a new array containing a filter like 'plant indoor vegetables' or 'plant indoor herbs'
    let checkLength = data.filter(function(item){
return item.category == cat;
});
     if ( checkLength.length > 0 ) {
     document.querySelector(divname).style = "display:none";
 } else {
     document.querySelector(divname).style = "color:#009900";
 }
}
checkEmpty(outdoorMonthData, "vegetable", "#outdoor-vegetables");
checkEmpty(outdoorMonthData, "fruit", "#outdoor-fruit");
checkEmpty(outdoorMonthData, "herb", "#outdoor-herbs");
checkEmpty(indoorMonthData, "vegetable", "#indoor-vegetables");
checkEmpty(indoorMonthData, "fruit", "#indoor-fruit");
checkEmpty(indoorMonthData, "herb", "#indoor-herbs");

console.log(outdoorMonthData.length);


//to populate the growing data
//the code that makes the link
function makeLink(title,slug) {
let slugify = convertToSlug(slug);
 return (
     `<a href="/contents/${slugify}">${title}</a>`
 )
};

//this ultimately calls the makeLink function to create the links, the purpose of this function is to select the right template to post the content to
function initialise(pages, containerid, templateid, divid, type) {

 const container = document.querySelector(containerid);
 const template = document.querySelector(templateid);

 pages.forEach((plant) => {
     if ( plant.category == type ) {
     const element = template.content.cloneNode(true);
     element.getElementById(divid).innerHTML = makeLink(plant.plant, plant.plant);
     container.appendChild(element);
     }
 });
}

initialise(outdoorMonthData, ".outdoorveg-container",'#outdoorveg-template',"outdoorveg-link", "vegetable");
initialise(outdoorMonthData, ".outdoorherb-container",'#outdoorherb-template',"outdoorherb-link", "herb");
initialise(outdoorMonthData, ".outdoorfruit-container",'#outdoorfruit-template',"outdoorfruit-link", "fruit");
initialise(indoorMonthData, ".indoorveg-container",'#indoorveg-template',"indoorveg-link", "vegetable");
initialise(indoorMonthData, ".indoorherb-container",'#indoorherb-template',"indoorherb-link", "herb");
initialise(indoorMonthData, ".indoorfruit-container",'#indoorfruit-template',"indoorfruit-link", "fruit");

