<script>

function makeLink(title,slug) {
 return (
     `<i style="font-size:0.7em;color:#009900;padding-right:1%" class="fas fa-chevron-circle-right"></i> <a href="/book/${slug}">${title}</a>`
 )
};

function makeButton(title,slug) {
 return (
     `<i style="font-size:0.7em;color:#009900;padding-right:1%" class="fas fa-chevron-circle-right"></i> <a href="/book/${slug}">${title}</a>`
 )
};

let postsArray = {{ pagesstoryindex | dump | safe }};
let allPagesSorted = [];
let introPages = [];
let starterPages = [];

//this function sorts all pages ready for the next and previous buttons, and stores this in the allPagesSorted array 
function sortPages() {
    allPagesSorted = postsArray.sort (function (a,b) {
     return a.order - b.order
})
}

sortPages();

function postIntoSections() {
    for ( i = 0 ; i < postsArray.length ; i++ ) {
        if ( postsArray[i].category == "introduction" ) {
            introPages.push(postsArray[i]);
        } else if ( postsArray[i].category == "starter" ) {
            starterPages.push(postsArray[i]);
        }
    }
}

postIntoSections();
console.log(allPagesSorted);

function initialise(pages, containerid, templateid, divid) {
 let sortedArray = pages.sort (function (a,b) {
     return a.order - b.order;
 })

 const container = document.querySelector(containerid);
 const template = document.querySelector(templateid);

 sortedArray.forEach((article) => {
     const element = template.content.cloneNode(true);
     let title = article.title;
     element.getElementById(divid).innerHTML = makeLink(article.title,article.slug);
     container.appendChild(element);
 });
}

initialise(introPages, ".intro-container",'#intro-template',"intro-link");
initialise(starterPages, ".starter-container",'#starter-template',"starter-link");

</script>
